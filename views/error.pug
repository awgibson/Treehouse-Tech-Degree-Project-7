extends layout.pug

//- I used the about.pug as a base template for consistency. I created custom classes for my own CSS to display the error

block content
    nav.grid-container.portfolio-breadcrumb
        a(href='/') ← Back
    article.grid-container.portfolio-intro.portfolio-project
        .grid-x
        .cell.small-6.medium-9.large-9
            h1= err.statusCode + ' ERROR.'
            p.text-light.error-message
                | #{err.message}
            .portfolio-bio
            p.text-light.error-stack= err.stack
    nav.grid-container.portfolio-breadcrumb
        a(href='/') ← Back