extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= project.project_name
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each tech in project.technologies
            li= tech
        if project.live_link
          a.button.expanded(href=`${project.live_link}` target='_blank') Live Demo
        if project.github_link
          a.button.expanded(href=`${project.github_link}` target='_blank') GitHub Repo
          //- Each iterator that pulls all images in the img_urls array except for postion 0 since this is the
          //- thumbnail. No hardcoding of total project images.
    each image, i in project.image_urls
      if i != 0
        img.image(src=`${project.image_urls[i]}`)